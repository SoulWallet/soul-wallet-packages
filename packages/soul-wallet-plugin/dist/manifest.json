{
    "manifest_version": 3,
    "name": "Soul Wallet",
    "description": "Soul Wallet",
    "version": "1.0.0",
    "action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "js/backgroundPage.js"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*", "<all_urls>"],
            "js": ["js/contentScripts.js"]
        }
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
        
    },
    "host_permissions": ["https://*/*"],
    "permissions": [
        "tabs",
        "activeTab",
        "notifications",
        "scripting",
        "storage"
    ]
}
