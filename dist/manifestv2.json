{
    "$schema": "https://json.schemastore.org/chrome-manifest.json",
    "name": "Soul",
    "description": "The security of Ethereum with the scale of StarkNet",
    "version": "4.5.0",
    "manifest_version": 2,
    "browser_action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_title": "Argent X",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "notifications",
        "scripting",
        "storage",
        "background"
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/contentScripts.js"],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "web_accessible_resources": ["js/inpage.js"]
}
