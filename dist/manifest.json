{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "Soul Wallet",
  "description": "Smart contract wallet for Ethereum",
  "permissions": [
    "activeTab",
    "notifications",
    "storage",
    "background"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_title": "Soul Wallet",
    "default_icon": "icon-128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "<all_urls>"
      ],
      "js": [
        "js/contentScripts.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "*.js",
    "*.json"
  ]
}