{
    "manifest_version": 2,
    "name": "Soul Wallet",
    "description": "Soul Wallet",
    "version": "0.0.1",
    "browser_action": {
        "default_icon": {
            "16": "icon-16.png",
            "48": "icon-48.png",
            "128": "icon-128.png"
        },
        "default_popup": "popup.html",
        "default_title": "Soul Wallet"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/contentScripts.js"]
        }
    ],
    "web_accessible_resources": ["js/inpage.js"],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "permissions": ["activeTab", "notifications", "storage", "background"]
}
