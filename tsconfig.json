{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@src/*": ["src/*"],
            "@components": ["src/components/*"],
            "@assets": ["src/assets/*"]
        },
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        // "rootDir": "./src",
        "outDir": "dist/js",
        "strict": true,
        "sourceMap": true,
        "jsx": "react",
        "esModuleInterop": true,
        "lib": ["ES2020", "dom"],
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
}
